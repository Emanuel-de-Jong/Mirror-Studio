<UserControl x:Class="MirrorStudio.Views.MainWindow.MenuComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MirrorStudio.Views.MainWindow"
             mc:Ignorable="d" 
             d:DesignWidth="1024" d:DesignHeight="70">
    
    <Border BorderThickness="0 0 0 2">
        <Grid Style="{StaticResource GridComponentStyle}" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border BorderThickness="0 0 2 0">
                <Label Content="Save" />
            </Border>
            <Label Grid.Column="1" Content="Record" />
        </Grid>
    </Border>

</UserControl>
