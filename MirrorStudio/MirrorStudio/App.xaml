<Application x:Class="MirrorStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MirrorStudio"
             StartupUri="Views\MainWindow\MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\XAML\Colors.xaml" />
                <ResourceDictionary Source="Resources\XAML\CustomTypes.xaml" />
                <ResourceDictionary Source="Resources\XAML\Types.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
